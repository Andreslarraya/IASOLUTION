---
import Layout from "../layouts/Layout.astro";
const { title, subTitle } = Astro.props;
---

<Layout title={title}>
  <main class="flex flex-col min-h-screen mx-auto text-black max-w-7xl">
    <header
      class="grid grid-cols-3 justify-center text-center items-center place-content-center bg-[rgba(255,255,255,0)] backdrop-blur-sm w-full fixed top-0 left-0 h-[100px] z-[1000]"
    >
      <div>
        <button
          onclick="window.history.back()"
          class="flex px-4 py-2 font-bold rounded hover:bg-gray-200"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 1024 1024"
            ><path
              fill="currentColor"
              d="M960 1024H832q-27 0-45.5-19T768 960V576q0-27-19-45.5T704 512H512v229q0 11-13.5 19t-32 7.5T437 755L18 427Q0 409 0 383.5T18 340L437 13Q448 1 466.5.5t32 7.5T512 28v228h256q106 0 181 75t75 181v448q0 26-19 45t-45 19"
            ></path></svg
          >
        </button>
      </div>
      <div>
        <a class="flex flex-row justify-center mt-4" href="/">
          <img
            class="w-12 h-12 lg:w-20 lg:h-20"
            src="favicon.svg"
            alt="Astro logo"
          />
          <h1 class="mt-3 ml-2 text-2xl font-bold lg:text-3xl lg:mt-8">
            IA SOLUTION
          </h1>
        </a>
      </div>
    </header>
    <section
      class="flex flex-col items-center gap-2 px-4 text-center lg:px-12 mt-28"
    >
      <h1 class="text-3xl font-bold lg:text-6xl">{title}</h1>
      <h2 class="text-2xl font-bold lg:text-4xl">
        {subTitle}
      </h2>
      <div class="flex flex-col items-center gap-6 text-sm md:text-xl">
        <slot />
      </div>
    </section>
  </main>
  <footer>
    <div class="flex flex-col items-center gap-2 py-6 text-xl text-center">
      <p>© 2024 IA SOLUTION</p>
      <p>Andrés Larraya</p>
    </div>
  </footer>
</Layout>
